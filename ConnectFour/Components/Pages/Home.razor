@page "/"
@rendermode InteractiveServer

<PageTitle>Connect Four Home</PageTitle>

<h3>Welcome to Connect Four!</h3>

<h4>Customize Your Game Colors</h4>

@* User Color Selections/Input
Begin with default colors listed in code section 
When the user selects a new color, the value of the string is changed below using bind *@
<div>
    <label for="boardColor">Board Color:</label>
    <input type="color" id="boardColor" @bind="BoardColor" />

    <label for="player1Color">Player 1 Color:</label>
    <input type="color" id="player1Color" @bind="Player1Color" />

    <label for="player2Color">Player 2 Color:</label>
    <input type="color" id="player2Color" @bind="Player2Color" />
</div>

@* The value of each color selection is passed to the board component *@
<Board BoardColor="@BoardColor" Player1Color="@Player1Color" Player2Color="@Player2Color" />

@code {
    private string BoardColor { get; set; } = "#FFFF00"; // Default yellow
    private string Player1Color { get; set; } = "#FF0000"; // Default red
    private string Player2Color { get; set; } = "#0000FF"; // Default blue
}